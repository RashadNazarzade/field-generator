{
  "name": "@glitchproof/form-field-generator",
  "version": "1.0.9",
  "description": "> Type-safe field path generation for nested objects and arrays",
  "scripts": {
    "build": "tsc",
    "ci": "bun run format:check && bun run test && bun run build",
    "format": "prettier --write .",
    "format:src": "prettier --write src/**/*.ts",
    "format:check": "prettier --write --check .",
    "clear:dist": "rm -rf dist",
    "format:check:src": "prettier --check src/**/*.ts",
    "cache-clear:test": "vitest --clearCache",
    "test": "bun clear:dist && bun cache-clear:test && vitest run",
    "local:release": "changeset version && changeset publish",
    "prepublishOnly": "bun ci",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "safe:release": "bun run ci && changeset version && changeset publish"
  },
  "keywords": [
    "react hook form",
    "field-name-generator",
    "fields generator"
  ],
  "author": "GlitchTruth",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RashadNazarzade/field-generator.git"
  },
  "files": [
    "dist",
    "!dist/__test__"
  ],
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/RashadNazarzade/field-generator/issues"
  },
  "homepage": "https://github.com/RashadNazarzade/field-generator#readme"
}
